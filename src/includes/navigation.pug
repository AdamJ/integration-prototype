header.pf-l-page__header(role='banner')
  .pf-l-page__header-brand
    a.pf-l-page__header-brand-link(href='#')
      | Integreatly
      //- img.pf-c-brand.pf-m-sm(src='/assets/images/l_pf-reverse-164x11.png' alt='Patternfly Logo')
  .pf-l-page__header-tools
    .pf-l-toolbar
      .pf-l-toolbar__group.pf-u-sr-only.pf-u-visible-on-lg
        .pf-l-toolbar__item
          button.pf-c-button.pf-m-plain(aria-label='Overflow actions')
            i.fas.fa-bell
        .pf-l-toolbar__item
          button.pf-c-button.pf-m-plain(aria-label='Overflow actions')
            i.fas.fa-cog
      .pf-l-toolbar__group
        .pf-l-toolbar__item.pf-u-hidden-on-lg.pf-u-mr-0
          button.pf-c-button.pf-m-plain(aria-label='Overflow actions')
            i.fas.fa-ellipsis-v
        .pf-l-toolbar__item.pf-u-sr-only.pf-u-visible-on-md
          .pf-c-dropdown.pf-m-plain
            button#dropdown-example-collapsed.pf-c-dropdown__toggle(aria-haspopup='true' aria-expanded='false')
              | Bob Johnson
              i.fas.fa-caret-down.pf-c-dropdown__toggle-icon(aria-hidden='true')
            .pf-c-dropdown__menu(role='menu' aria-labelledby='dropdown-example-collapsed' hidden='hidden')
              a.pf-c-dropdown__menu-item(role='menuitem' href='#') Link
              button.pf-c-dropdown__menu-item(role='menuitem') Action
              a.pf-c-dropdown__menu-item.pf-m-disabled(role='menuitem' aria-disabled='true' tabindex='-1' href='#') Disabled Link
              button.pf-c-dropdown__menu-item(role='menuitem' disabled='') Disabled Action
              .pf-c-dropdown__separator(role='separator')
              a.pf-c-dropdown__menu-item(role='menuitem' href='#') Separated Link
    img.pf-c-avatar(src='/img/logo-alt.svg' alt='Avatar image')
